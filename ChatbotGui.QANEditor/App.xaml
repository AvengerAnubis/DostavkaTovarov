<Application x:Class="ChatbotGui.QANEditor.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:local="clr-namespace:ChatbotGui.QANEditor">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <md:BundledTheme BaseTheme="Dark" PrimaryColor="DeepPurple" SecondaryColor="Lime" />

                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesign3.Defaults.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <Style TargetType="TextBox" 
                   BasedOn="{StaticResource MaterialDesignOutlinedTextBox}">
                <Setter Property="Margin" Value="8"/>
                <Setter Property="Padding" Value="12"/>
            </Style>
            <Style TargetType="Label" 
                   BasedOn="{StaticResource MaterialDesignLabel}">
                <Setter Property="Margin" Value="8"/>
            </Style>
            <Style TargetType="TextBlock" 
                   BasedOn="{StaticResource MaterialDesignTextBlock}">
                <Setter Property="Margin" Value="0"/>
            </Style>
            <Style TargetType="Button" 
                   x:Key="PaintedButton"
                   BasedOn="{StaticResource MaterialDesignRaisedButton}">
                <Setter Property="Margin" Value="8"/>
            </Style>
            <Style TargetType="Button" 
                   x:Key="FlatButton"
                   BasedOn="{StaticResource MaterialDesignPaperButton}">
                <Setter Property="Margin" Value="8"/>
                <Setter Property="Padding" Value="8"/>
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>
