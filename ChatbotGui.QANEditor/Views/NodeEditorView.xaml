<Page x:Class="ChatbotGui.QANEditor.Views.NodeEditorView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
      xmlns:local="clr-namespace:ChatbotGui.QANEditor.Views"
      xmlns:viewmodels="clr-namespace:ChatbotGui.QANEditor.ViewModels" 
      mc:Ignorable="d"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="NodeEditorView"
      d:DataContext="{d:DesignInstance Type=local:NodeEditorView}">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        
        <!--#region Заполняемые поля-->

        <Label Grid.Column="1" Grid.Row="0" Content="Вопрос без контекста"/>
        <TextBox Grid.Column="2" Grid.Row="0" 
                 Text="{Binding Path=ViewModel.SelectedNode.Question, Mode=TwoWay}">
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="LostFocus">
                    <i:InvokeCommandAction Command="{Binding ViewModel.Hierarchy.SaveNodesCommand}"/>
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </TextBox>

        <Label Grid.Column="1" Grid.Row="1" Content="Вопрос в контексте"/>
        <TextBox Grid.Column="2" Grid.Row="1" 
                 Text="{Binding Path=ViewModel.SelectedNode.QuestionContexted, Mode=TwoWay}">
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="LostFocus">
                    <i:InvokeCommandAction Command="{Binding ViewModel.Hierarchy.SaveNodesCommand}"/>
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </TextBox>
        
        <Label Grid.Column="1" Grid.Row="2" Content="Ответ"/>
        <TextBox Grid.Column="2" Grid.Row="2" 
                 Text="{Binding Path=ViewModel.SelectedNode.Answer, Mode=TwoWay}">
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="LostFocus">
                    <i:InvokeCommandAction Command="{Binding ViewModel.Hierarchy.SaveNodesCommand}"/>
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </TextBox>

        <Label Grid.Column="1" Grid.Row="3" Content="Контекстные вопросы"/>
        <ListView Grid.Row="3" Grid.Column="2" ItemsSource="{Binding Path=ViewModel.SelectedNode.ContextChildren}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding Path=Question}"/>
                        <Button HorizontalAlignment="Right" Content="Ред." 
                                Command="{Binding RelativeSource={RelativeSource Mode=FindAncestor, 
                            AncestorType=local:NodeEditorView}, Path=ViewModel.EditContextNodeCommand}"
                                CommandParameter="{Binding Path=.}"/>
                        <Button HorizontalAlignment="Right" Content="Удал." 
                                Command="{Binding RelativeSource={RelativeSource Mode=FindAncestor, 
                            AncestorType=local:NodeEditorView}, Path=ViewModel.RemoveContextNodeCommand}"
                                CommandParameter="{Binding Path=.}"/>
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <!--#endregion-->

        <!--#region Кнопки -->

        <Button Grid.Column="2" Grid.Row="4" Content="+">
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="Click">
                    <i:InvokeCommandAction Command="{Binding ViewModel.Hierarchy.SaveNodesCommand}" />
                    <i:InvokeCommandAction Command="{Binding ViewModel.AddContextNodeCommand}" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Button>
        <StackPanel Grid.Column="0" Grid.Row="4" Orientation="Horizontal">
            <Button Content="Сохранить" Command="{Binding ViewModel.SaveHierarchyToMainCommand}"/>
            <Button Content="Сохранить как" Command="{Binding ViewModel.SaveHierarchyToUserFileCommand}"/>
        </StackPanel>
        

        <!--#endregion -->

        <!--#region Иерархия -->

        <TreeView ItemsSource="{Binding ViewModel.Hierarchy.HeadNodeCollection}" Grid.RowSpan="4">
            <TreeView.ItemTemplate>
                <HierarchicalDataTemplate 
                    DataType="viewmodels:QuestionAnswerNodeViewModel"
                    ItemsSource="{Binding Path=ContextChildren}">
                    <TextBlock Text="{Binding Path=Question}">
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="MouseLeftButtonDown">
                                <i:InvokeCommandAction 
                                    Command="{Binding RelativeSource=
                                    {RelativeSource Mode=FindAncestor, AncestorType=local:NodeEditorView}, 
                                    Path=ViewModel.SelectNodeCommand}" 
                                    CommandParameter="{Binding Path=.}"/>
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                    </TextBlock>
                </HierarchicalDataTemplate>
            </TreeView.ItemTemplate>
        </TreeView>

        <!--#endregion -->
    </Grid>
</Page>
