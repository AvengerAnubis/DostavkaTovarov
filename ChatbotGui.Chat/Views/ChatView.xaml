<Page x:Class="ChatbotGui.Chat.Views.ChatView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ChatbotGui.Chat.Views" 
      xmlns:vm="clr-namespace:ChatbotGui.Chat.ViewModels" 
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      d:DataContext="{d:DesignInstance Type=vm:ChatPageViewModel}"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="800"
      Title="ChatView">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="96" />
        </Grid.RowDefinitions>

        <!--#region Верхняя часть - чат -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="560" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <ui:ListView>
                
            </ui:ListView>
            <ui:ListView Grid.Column="1">
                
            </ui:ListView>
        </Grid>
        <!--#endregion-->
        <!--#region Нижняя часть - ввод -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="64" />
            </Grid.ColumnDefinitions>
            <ui:TextBox Grid.Column="0" Text="Введите текст" />
            <ui:Button Grid.Column="1" Width="48" Height="48">
                <ui:SymbolIcon Symbol="Send24"/>
            </ui:Button>
        </Grid>
        <!--#endregion-->
    </Grid>
</Page>
