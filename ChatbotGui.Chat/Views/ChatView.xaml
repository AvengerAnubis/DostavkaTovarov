<Page x:Class="ChatbotGui.Chat.Views.ChatView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ChatbotGui.Chat.Views" 
      xmlns:vm="clr-namespace:ChatbotGui.Chat.ViewModels" 
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      xmlns:ts="clr-namespace:ChatbotGui.Chat.Classes.TemplateSelectors"
      
      d:DataContext="{d:DesignInstance Type=local:ChatView}"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="800"
      Title="ChatView">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="96" />
        </Grid.RowDefinitions>

        <!--#region Верхняя часть - чат -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="320" />
            </Grid.ColumnDefinitions>

            <!--#region Чат -->
            <ui:ListView ItemsSource="{Binding ViewModel.Messages}"
                         ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                <ListView.Resources>
                    <!-- Стиль для сообщений бота -->
                    <DataTemplate x:Key="BotMessageTemplate">
                        <StackPanel Orientation="Vertical" HorizontalAlignment="Left"
                                    Margin="16,0,16,0">
                            <ui:TextBlock Visibility="{Binding IsFirstMessage, 
                                Converter={StaticResource ResourceKey=VisibilityConverter}}"
                                          Text="{Binding Author}"
                                          HorizontalAlignment="Left"/>
                            <ui:Card>
                                <ui:TextBlock Text="{Binding Message}"
                                              TextWrapping="Wrap"/>
                            </ui:Card>
                        </StackPanel>
                    </DataTemplate>

                    <!-- Стиль для сообщений пользователя -->
                    <DataTemplate x:Key="UserMessageTemplate">
                        <StackPanel Orientation="Vertical" HorizontalAlignment="Right"
                                    Margin="16,0,16,0">
                            <ui:TextBlock Visibility="{Binding IsFirstMessage, 
                                Converter={StaticResource ResourceKey=VisibilityConverter}}"
                                Text="{Binding Author}"
                                HorizontalAlignment="Right"/>
                            <ui:Card>
                                <ui:TextBlock Text="{Binding Message}"
                                              TextWrapping="Wrap"/>
                            </ui:Card>
                        </StackPanel>
                    </DataTemplate>

                    <!-- Селектор шаблонов -->
                    <ts:ChatMessageTemplateSelector 
                    x:Key="ChatMessageTemplateSelector"
                    BotTemplate="{StaticResource BotMessageTemplate}"
                    UserTemplate="{StaticResource UserMessageTemplate}" />
                    
                </ListView.Resources>

                <ListView.ItemTemplateSelector>
                    <StaticResource ResourceKey="ChatMessageTemplateSelector"/>
                </ListView.ItemTemplateSelector>
            </ui:ListView>
            <!--#endregion-->
            
            <!--#region Предлагаемые сообщения -->
            <ui:ListView Grid.Column="1"
                          ItemsSource="{Binding ViewModel.RecommendedMessages}"
                         ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                <ui:ListView.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel FlowDirection="LeftToRight" />
                    </ItemsPanelTemplate>
                </ui:ListView.ItemsPanel>
                <ui:ListView.ItemTemplate>
                    <DataTemplate>
                        <StackPanel>
                            <ui:Button Command="{Binding RelativeSource=
                                {RelativeSource Mode=FindAncestor,
                                AncestorType=local:ChatView},
                                Path=ViewModel.SendMessageFromRecommendedCommand}"
                                       CommandParameter="{Binding Path=.}">
                                <ui:TextBlock Text="{Binding Path=.}"
                                              TextWrapping="Wrap"/>
                            </ui:Button>
                        </StackPanel>
                    </DataTemplate>
                </ui:ListView.ItemTemplate>
            </ui:ListView>
            <!--#endregion-->
        </Grid>
        <!--#endregion-->
        <!--#region Нижняя часть - ввод -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="64" />
            </Grid.ColumnDefinitions>
            <ui:TextBox Grid.Column="0" Text="{Binding ViewModel.MessageToSend, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                        Height="48" Margin="16">
                <ui:TextBox.InputBindings>
                    <KeyBinding Command="{Binding ViewModel.SendMessageCommand}" Key="Return"/>
                </ui:TextBox.InputBindings>
            </ui:TextBox>
            <ui:Button Grid.Column="1" Width="48" Height="48"
                       Command="{Binding ViewModel.SendMessageCommand}">
                <ui:SymbolIcon Symbol="Send24"/>
            </ui:Button>
        </Grid>
        <!--#endregion-->
    </Grid>
</Page>
