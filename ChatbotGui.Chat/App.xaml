<Application
    x:Class="ChatbotGui.Chat.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:vc="clr-namespace:ChatbotGui.Chat.Classes.ValueConverters"
    xmlns:system="clr-namespace:System;assembly=mscorlib"
    DispatcherUnhandledException="OnDispatcherUnhandledException"
    Exit="OnExit"
    Startup="OnStartup">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ui:ThemesDictionary Theme="Light" />
                <ui:ControlsDictionary />
            </ResourceDictionary.MergedDictionaries>
            <vc:VisibilityConverter
    x:Key="VisibilityConverter"/>
            <system:Double x:Key="DefaultFontSize">22</system:Double>
            <ImageSource x:Key="Background">
                /ChatbotGui.Chat;component/Resources/bg.jpg
            </ImageSource>
        </ResourceDictionary>
    </Application.Resources>
</Application>
